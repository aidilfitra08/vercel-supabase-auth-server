# Database Selection
# Options: supabase | local
DB_TYPE=supabase

# Common DB URL override (takes precedence if set)
DB_URL=postgres://user:password@host:5432/database

# Local PostgreSQL (used when DB_TYPE=local and DB_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db
DB_USER=postgres
DB_PASSWORD=postgres

# Supabase Configuration (used when DB_TYPE=supabase and DB_URL not set)
SUPABASE_DB_HOST=your_supabase_host
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_supabase_db_password

# Optional: Supabase REST client (kept for compatibility)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# JWT Secret
JWT_SECRET=your_jwt_secret_here_change_in_production

# Admin API Key (for admin endpoints)
ADMIN_API_KEY=your-admin-api-key-change-in-production

# Server Port
PORT=3001

# LLM API Keys
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# Ollama Configuration (if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434/v1

# Embedding Configuration
# Options: "gemini" or "fastapi"
EMBEDDING_PROVIDER=gemini

# FastAPI Embedding Server (if using fastapi provider)
FASTAPI_EMBEDDING_URL=http://localhost:8000

# Qdrant Configuration (Vector Database for RAG)
# For Cloud: Set QDRANT_URL to your cloud instance and QDRANT_API_KEY
# For Local: Set QDRANT_URL=http://localhost:6333 (no API key needed)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=documents
VECTOR_SIZE=768

# Default LLM Model
# Options: "gemini", "gpt", "ollama"
DEFAULT_LLM_MODEL=gemini

# Debug Mode
# Set to "true" to enable debug mode for chat endpoints (returns mock responses without calling LLM APIs)
# Useful for testing streaming functionality and API structure during development
STREAM_DEBUG_MODE=false
